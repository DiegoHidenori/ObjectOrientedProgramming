                problem1 = Convert.ToInt32(Console.ReadLine());
                if (problem1 == 2)
                {
                    Console.WriteLine("Answer correct.");
                    break;
                }
                else
                {
                    Console.WriteLine("Incorrect try again.");
                    counter1++;
                }
            }
            int marks1 = 0;
            switch (counter1)
            {
                case 0:
                    marks1 = 20;
                    break;
                case 1:
                    marks1 = 10;
                    break;
                case 2:
                    marks1 = 5;
                    break;
                case 3:
                    marks1 = 0;
                    break;
                case 4:
                    marks1 = 0;
                    break;
                default:
                    Console.WriteLine("There has been an error with question 1");
                    break;
            }
